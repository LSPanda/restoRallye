// Add font to my input
input, textarea
    max-width 100%
    max-height 100%
    font-family wf_font-labeur
    rem-fallback( font-size, 16px )

input[type="submit"]
    font-family wf_font-nav
    rem-fallback( font-size, 20px )

    +media-query( screen, max-width 960px )
        rem-fallback( font-size, 16px )
