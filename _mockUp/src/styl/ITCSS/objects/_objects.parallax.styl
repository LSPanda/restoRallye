// Parallax placements
.parallax__img
    position static
    min-height 80vh

    +media-query( screen, max-width 1920px )
        min-height 75vh
    +media-query( screen, max-width 1020px )
        min-height 60vh
    +media-query( screen, max-width 820px )
        min-height 50vh
    +media-query( screen, max-width 490px )
        min-height 35vh

.parallax__body
    rem-fallback( max-width, 1260px )
    margin 0 auto

    +media-query( screen, max-width 1020px )
        rem-fallback( max-width, 1000px )
    +media-query( screen, max-width 820px )
        rem-fallback( max-width, 720px )
    +media-query( screen, max-width 490px )
        rem-fallback( max-width, 440px )
