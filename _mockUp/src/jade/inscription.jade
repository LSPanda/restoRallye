// - Contact.html

extends includes/layout

block title
    title Resto Rallye - Contact

block header
    - var current = { second: 'html' }
    include includes/header.jade

block content
    div.parallax__img.parallax__img--twenty-two
    div.parallax__body
        div(itemscope itemtype="http://schema.org/Thing")
            h2(itemprop="headline").gamma Un problème&nbsp;?
            p(itemprop="description") La moindre question &nbsp;? N'hesiter pas à nous contacter par mail ou via ce formulaire, nous serons heureux de vous répondre.
            form.form
                div.inline-block.form__element
                    label(for="nomQuestion").hightlight.label__text
                        | Nom
                        span.span--spacing.asterisque *
                    input(id="nomQuestion" type="text" placeholder="Doe").input__text
                div.inline-block.form__element
                    label(for="prenomQuestion").hightlight.label__text
                        | Prénom
                        span.span--spacing.asterisque *
                    input(id="prenomQuestion" type="text" placeholder="John").input__text
                div.inline-block.form__element
                    label(for="sujetQuestion").hightlight.label__text
                        | Sujet
                        span.span--spacing.asterisque *
                    input(id="sujetQuestion" type="text" placeholder="Votre question").input__text
                div.inline-block.form__element
                    label(for="mailQuestion").hightlight.label__text
                        | Mail
                        span.span--spacing.asterisque *
                    input(id="mailQuestion" type="text" placeholder="johndoe@gmail.com").input__text
                div.block.form__element--fullSize
                    label(for="msgQuestion").hightlight.label__text Votre message
                    textarea(id="msgQuestion" rows="10" placeholder="Votre question").input__text
                div.block.form__element--fullSize
                    input(type="submit" value="Envoyez").input__submit
                    label.hightlight.label__text
                        | Tous les champs munis d’un astérisque
                        span.span--spacing.asterisque (*)
                        | sont obligatoires

    div.parallax__img.parallax__img--twenty-three

block footer
    include includes/footer.jade

block script
    script(src="../js/vendor/modernizr-2.6.2.min.js")
    script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDHJ3p-sn1Y5tJGrzH9MF5cbR5sdsDmhfg&sensor=false")
    script(src="../js/vendor/jquery.js")
    script(src="../js/script.js")
