// - includes/header.jade

header(itemscope itemtype="http://schema.org/WPHeader").header
    h1(itemprop="headline").hiddenTitle Bienvenue sur le site de Resto Rallye 
    nav(itemscope itemtype="http://schema.org/SiteNavigationElement").header__nav
        div.nav__conn
            form.form__login
                div.inline-block.login__element
                    label(for="login").hightlight.login__label Mail
                    input(id="login" type="text" placeholder="john.doe@gmail.com").input__text
                div.inline-block.login__element
                    label(for="pwd").hightlight.login__label Mot de passe
                    input(id="pwd" type="text" placeholder="*********").input__text
                div.inline-block.login__element
                    p.login__log
                        if current.main
                            a(href="html/inscription.html") Inscrivez-vous&nbsp;!
                        else    
                            a(href="inscription.html") Inscrivez-vous&nbsp;!
                    input(type="submit" value="Se connecter").login__submit
        //-
            div.nav__conn.logout--height
                p.nav__conn--logout
                    | Bienvenue
                    span.span--spacing 
                        | Michel 
                        a(href="#") (&nbsp;Modifier informations personnel&nbsp;/
                        a(href="#") &nbsp;Déconnexion&nbsp;)
            
        
        div.nav
            h2(itemprop="alternativeHeadline").hiddenTitle Menu de navigation du site
            if current.main
                span(itemprop="keywords").inline-block.nav__element.nav__element--accueil
                    a(itemprop="url" href="index.html").element__link Accueil
            else    
                span(itemprop="keywords").inline-block.nav__element.nav__element--accueil
                    a(itemprop="url" href="../index.html").element__link Accueil
            if current.main
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="html/evenements.html").element__link Événements
            else    
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="evenements.html").element__link Événements
            if current.main
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="html/blog.html").element__link Actualités
            else    
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="blog.html").element__link Actualités
            if current.main
                span.inline-block.banners
                    a(itemprop="url" href="index.html").banners__link
                        img(itemprop="image" src="css/images/links/Ecusson.png", alt="Banners Resto Rallye")
            else    
                span.inline-block.banners
                    a(itemprop="url" href="../index.html").banners__link
                        img(itemprop="image" src="../css/images/links/Ecusson.png", alt="Banners Resto Rallye")
            if current.main
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="html/restaurants.html").element__link Restaurants
            else    
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="restaurants.html").element__link Restaurants
            if current.main
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="html/contact.html").element__link Contact
            else
                span(itemprop="keywords").inline-block.nav__element
                    a(itemprop="url" href="contact.html").element__link Contact
            span(itemprop="keywords")#login.block.button__login Connexion
